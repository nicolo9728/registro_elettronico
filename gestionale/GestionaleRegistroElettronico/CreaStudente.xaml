<Window x:Class="GestionaleRegistroElettronico.CreaStudente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionaleRegistroElettronico"
        mc:Ignorable="d"
        Title="CreaStudente" Height="409" Width="339">
    <StackPanel Margin="10">
        <TextBlock HorizontalAlignment="Center" FontSize="25" Margin="20">Crea Studente</TextBlock>
        <TextBlock>Nome</TextBlock>
        <TextBox x:Name="txtNome" />
        <TextBlock Margin="0, 10, 0, 0">Cognome</TextBlock>
        <TextBox x:Name="txtCognome"/>
        <TextBlock Margin="0, 10, 0, 0">Username</TextBlock>
        <TextBox  x:Name="txtUsername"/>
        <TextBlock Margin="0, 10, 0, 0">Password</TextBlock>
        <PasswordBox x:Name="txtPassword"/>
        <TextBlock Margin="0, 10, 0, 0">Data di nascita</TextBlock>
        <DatePicker Name="dtpNascita"/>
        <Button Margin="10, 20" Click="Crea">Crea</Button>
    </StackPanel>
</Window>
